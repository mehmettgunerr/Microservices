@{
    ViewData["Title"] = "CheckoutHistory";
}
@model List<OrderViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Ödeme geçmişim</h5>

                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Sipariş(Ödeme) No</th>
                                <th>Satın alma tarihi</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CreatedDate.ToShortDateString()</td>
                                    <td>
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Kurs isim</th>
                                                    <th>Kurs fiyat</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item2 in item.OrderItems)
                                                {
                                                    <tr>
                                                        <td>@item2.ProductName</td>
                                                        <td>@item2.Price</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Satın aldığınız bir kurs bulunmamaktadır</div>
                }
            </div>
        </div>
    </div>
</div>